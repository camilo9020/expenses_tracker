<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <p><%= link_to 'Back', trips_path, class: 'btn btn-default pull-right' %></p>
      <h1><%= title %></h1>
    </div>
  </div>
</div>
<div class="row">
  <%= render 'shared/error_messages.html.erb', object: @trip %>
</div>
<div class="row">
  <div class="col-lg-10">
    <%= form_for @trip, url: url do |f| %>
      <div class="form-group">
        <%= f.label :destiny, 'Destiny', class: 'required'%>
        <%= f.text_field :destiny, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :begin_date, 'Begin date', class: 'required' %>
        <%= f.date_field :begin_date, class: 'form-control', placeholder: 'máximo 500 caracteres' %>
      </div>
      <div class="form-group">
        <%= f.label :end_date, 'End date', class: 'required' %>
        <%= f.date_field :end_date, class: 'form-control', placeholder: 'máximo 500 caracteres' %>
      </div>
      <div class="form-group">
        <%= f.label :employee_id, 'Employee' %>
        <%= f.collection_select :employee_id, Employee.all, :id, :email, {include_blank: 'Select an employee'}, class: 'form-control' %>
      </div>
      <div class="actions">
        <%= f.submit 'Save', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
