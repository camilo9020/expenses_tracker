<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="login-panel panel panel-default">
      <div class="panel-heading">
        <h2 class="text-center"><%= title %></h2>
      </div>
      <div class="panel-body">
        <%= form_for @employee, url: url do |f| %>
          <div class="form-group">
            <%= f.label :first_name, 'Primer nombre' %> <br />
            <%= f.text_field :first_name, autofocus: true, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :last_name, 'Apellido' %> <br />
            <%= f.text_field :last_name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :occupation, 'Cargo' %> <br />
            <%= f.text_field :occupation, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :admin, 'Â¿Es administrador?' %> <br />
            <%= f.check_box :admin %>
          </div>
          <div class="actions">
            <%= f.submit "Guardar", class: 'btn btn-primary form-control' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>




