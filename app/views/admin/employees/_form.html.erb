<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <p><%= link_to 'Regresar', admin_employees_path, class: 'btn btn-default pull-right' %></p>
      <h1><%= title %></h1>
    </div>
  </div>
</div>
<div class="row">
  <%= render 'shared/error_messages.html.erb', object: @employee %>
</div>
<div class="row">
  <div class="col-lg-10">
   <%= form_for @employee, url: url do |f| %>
     <div class="form-group">
       <%= f.label :first_name, 'Primer nombre' %> <br />
       <%= f.text_field :first_name, autofocus: true, class: 'form-control' %>
     </div>
     <div class="form-group">
       <%= f.label :last_name, 'Apellido' %> <br />
       <%= f.text_field :last_name, class: 'form-control' %>
     </div>
     <div class="form-group">
       <%= f.label :email %><br />
       <%= f.email_field :email, class: 'form-control' %>
     </div>
     <div class="form-group">
       <%= f.label :occupation, 'Cargo' %> <br />
       <%= f.text_field :occupation, class: 'form-control' %>
     </div>
     <div class="form-group">
       <%= f.label :admin, 'Â¿Es administrador?' %> <br />
       <%= f.check_box :admin %>
     </div>
     <div class="actions">
       <%= f.submit "Guardar", class: 'btn btn-primary form-control' %>
     </div>
   <% end %>
  </div>
</div>




