<div class="row">
  <div class="col-lg-12">
      <div class="page-header">
        <p> <%= link_to '<span class="glyphicon glyphicon-plus"> New Trip</span>'.html_safe, new_admin_trip_path, class: "btn btn-primary  pull-right" %></p>
        <h1>Trips list</h1>
      </div>
  </div>
</div>
<div class="row">
  <%= will_paginate @trips %>
  <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
    <thead>
      <tr>
        <th>Destiny</th>
        <th>Begin date</th>
        <th>End date</th>
        <th>Employee</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @trips.each do |trip| %>
        <tr>
          <td><%= trip.destiny %></td>
          <td><%= trip.begin_date %></td>
          <td><%= trip.end_date %></td>
          <td><%= trip.employee.first_name + ' ' + trip.employee.last_name%> </td>
          <td><%= link_to 'Edit', edit_admin_trip_path(trip) %> | <%=  link_to 'Delete', admin_trip_path(trip), method: :delete, data: {confirm: 'Are you sure?'} %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>