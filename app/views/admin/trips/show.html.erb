<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <p><%= link_to 'Regresar', :back, class: 'btn btn-default pull-right' %></p>
      <h2><%= @product.name %></h2>
      <%= @product.active? ? '<span class="label label-success">Activo</span>'.html_safe : '<span class="label label-danger">Inactivo</span>'.html_safe  %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-lg-8">
    <p><strong>Descripción:</strong></p>
    <p><%= @product.description %></p>
    <p><strong>Referencia:</strong> <%= @product.ref %></p>
    <p><strong>Tamaño:</strong> <%= @product.size %></p>
    <p><strong>Categoria:</strong> <%= link_to @product.category.title, admin_category_path(@product.category) %></p>
    <%= link_to 'Editar', edit_admin_product_path, class: 'btn btn-default' %>
    <%= link_to 'Eliminar', admin_product_path, method: :delete, data: {confirm: '¿Estas seguro de querer eliminar este producto?'}, class: 'btn btn-default' %>
  </div>
  <div class="col-lg-4 text-center">
    <%= image_tag @product.image.url(:medium) %>
  </div>
</div>
