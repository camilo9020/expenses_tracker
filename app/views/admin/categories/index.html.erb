<div class="row">
  <div class="col-lg-12">
      <div class="page-header">
        <p><%= link_to '<span class="glyphicon glyphicon-plus"> New category</span>'.html_safe, new_admin_category_path, class: "btn btn-primary pull-right", remote: true %></p>
        <h1>Categories list</h1>
      </div>
  </div>
</div>
<div class="row">
    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
      <thead>
        <tr>
          <th>Name</th>
          <th>Total expenses</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.name %></td>
            <td><%= category.expenses.sum(:amount) %></td>
            <td><%= link_to 'Edit', edit_admin_category_path(category) %> | <%= link_to 'Delete', admin_category_path(category), method: :delete, data: {confirm: 'Are you sure?'} %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>